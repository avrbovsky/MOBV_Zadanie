<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/cv_feedItemImage"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
            <ImageView
                android:id="@+id/iv_feedItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_feedItemUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/cv_feedItemImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_feedItemRadius"
        android:layout_marginStart="25dp"
        tools:text="xvrbovskya"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_feedItemRadius"
        android:textSize="10sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/cv_feedItemImage"
        app:layout_constraintBottom_toTopOf="@+id/tv_feedItemUpdate"
        app:layout_constraintTop_toBottomOf="@+id/tv_feedItemUsername"
        android:layout_marginStart="25dp"
        tools:text="okruh 600 metrov"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_feedItemUpdate"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/cv_feedItemImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_feedItemRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="25dp"
        tools:text="Pred 6 hodinami"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/cv_feedItemImage"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
            <ImageView
                android:id="@+id/iv_feedItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_feedItemUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/cv_feedItemImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_feedItemUpdate"
        android:layout_marginStart="15dp"
        tools:text="xvrbovskya"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_feedItemUpdate"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/cv_feedItemImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_feedItemUsername"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        tools:text="Updated at: 2023-12-06 22:52:58"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
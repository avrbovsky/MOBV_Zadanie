<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_prihlasenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prihlasenie"
        android:layout_marginTop="20dp"
        style="@style/Header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_prihlasenie"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_loginUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Zadajte username"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_usernameLabel" />

    <TextView
        android:id="@+id/tv_hesloLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heslo:"
        app:layout_constraintTop_toBottomOf="@+id/et_loginUsername"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_loginHeslo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Zadajte heslo"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/tv_hesloLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_login"
        android:text="Prihlásiť sa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>